<?xml version="1.0"?>

<!-- Default launch configuration for the Polaris ATV -->
<launch>
  <group ns="novatel">
    <node pkg="tf" type="static_transform_publisher" name="base_link_imu" args="0.63 0.08 1.55 0 0 0 base_link imu 20" />
    <node pkg="tf" type="static_transform_publisher" name="base_link_gps" args="0.63 0.08 1.55 0 0 0 base_link gps 20" />

    <include file="$(find polaris)/config/novatel.launch"><!-- specify parameters in novatel.launch -->
      <arg name="log_commands" value="BESTLEVERARMB ONCE" /> <!-- Contains the IMU->Antenna offset -->
    </include>
  </group>

  <group ns="velodyne">
    <node pkg="tf" type="static_transform_publisher" name="base_link_velodyne" args="0.95 0 1.84 0 0 0 base_link velodyne_tf 50" />
    <include file="$(find polaris)/config/velodyne_pointcloud.launch">
      <arg name="calibration" value="$(find polaris)/config/params/velodyne_calibration.yaml" />
      <arg name="frame_id" value="velodyne_tf" />      
    </include>
  </group>

  <group ns="lidar2scan">
    <remap from="cloud_in" to="/velodyne/velodyne_points" />
    <include file="$(find polaris)/config/lidar2scan.launch" />
  </group>  
  
  <include file="$(find polaris)/config/gmapping.launch" />
  <!-- group ns="hector_mapping">
    <include file="$(find polaris)/config/hector_mapping.launch">
    </include>
  </group-->
  
  <include file="$(find polaris)/config/polaris_kinematics.launch" />
  <include file="$(find polaris)/config/ekf_nav_node.launch" />
  <include file="$(find polaris)/config/controller.launch" />  	
  
  <!--- Run AMCL --> 
  <!-- include file="$(find polaris)/config/amcl.launch" /--> 

  <group ns="basler">
    <node pkg="tf" type="static_transform_publisher" name="base_link_basler" args="0.95 0 1.673 3.14 0 0 base_link basler_link 100" />
    <include file="$(find polaris)/config/pylon_camera.launch">
      <!-- arg name="config_file" value="$(find polaris)/config/params/pylon_default.yaml" /-->
    </include>
  </group>

  <group ns="cata2pano">
    <include file="$(find polaris)/config/cata2pano.launch" />
  </group>

  <group ns="can">
    <include file="$(find polaris)/config/atv_can.launch" />
  </group>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find polaris)/config/rviz_default.rviz" />
  
  <node name="rosbag_record" pkg="rosbag" type="record"
    args="-a -o /home/atv/" /> 

</launch>
